<div class="container-fluid bg-dark pb-4">
  <div class="text-center">
    <h2 class="text-white mb-3">Inscripciones</h2>
  
  </div>
  <div class="row">
    <table style="table", class="table table-dark">
      <thead>
        <tr>
          <th width "80%"> Residencia</th>
          <th width "80%"> Semana</th>
          <th width "80%"> Precio Base</th>
          <th width "80%"> Fecha de Inicio</th>
          <th width "80%"> Fecha de Fin</th>
          <th width "80%"> Acciones </th>
          <th colspan="4"> </th>
        </tr>
      </thead>
      <tbody>
      <% if (current_user.user_type_id == 2)  || (current_user.user_type_id == 3) %>
        <% if (current_user.inscriptions != nil) %>
          <% current_user.inscriptions.each do |inscription| %>
            <tr>
            <% if (inscription.week != nil) %>
              <td> <%= Residence.find(inscription.week.residence_id).title%> </td>
              <td><%= inscription.week.period.strftime('%d/%m/%Y') %> </td>
              <% if (inscription.week.sale != nil) %>
                <td><%= inscription.week.sale.precioBase %> </td>
                <td><%= inscription.week.sale.fechaInicio %> </td>
                <td><%= inscription.week.sale.fechaFin %> </td>

                <%if (inscription.week.status_id == 2) && ((inscription.week.sale.fechaFin >= Date.today) || (inscription.week.sale.fechaInicio <= Date.today))%>

                      <td><%= link_to "Ver subasta", edit_week_sales_path(inscription.week), class: 'btn btn-info btn-primary'%></td>

                <% end %>
              <% end %>
             <% end %>

            </tr>
          <% end %>
        <% end %>
       <% end %>

      </tbody>
    </table>
  </div>

  <br><br><br>

  <button class="btn btn-block btn-light col-4 offset-4 mt-3"> <%= link_to "Volver", root_path %>
</button>

</div>
