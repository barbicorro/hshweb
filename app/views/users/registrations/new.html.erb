<div class="container-fluid bg-dark pb-4">
 
          <h2 class="text-white text-center mb-3">Registro</h2>
          <div class="alert text-white mb-3 alert-expand-lg bg-dark"><%= devise_error_messages! %>  </div>
_    
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    

    <div class="field text-white ml-4">
      <h4>Datos personales </h4> 
       <div class="bg-dark"><br /></div>
          <div class="form-group">
          <div class="row">
            <div class="col-2 ">
                <div><%= f.label :name, "Nombre"%> 
                <%= f.text_field :name,class: 'form-control mb-3', required: true%> </div>
              </div>
             <div class="col-2"> 
                <div><%= f.label :lastname, "Apellido"%> 
                <%= f.text_field :lastname, class: 'form-control mb-3',required: true%> </div>
              </div>
          </div>
          <div class="row">
            <div class="col-1"> 
              <div><%= f.label :age, "Edad"%> </div>
              <%=f.number_field :age, class: 'form-control mb-3',min: "18",autofocus:true, required:true %>
            </div>

            <div class="col-2"> 
              <div><%= f.label :date_of_birth, "Fecha de nacimiento"%></div>
              <div id="sandbox-container">
                <%= f.text_field :date_of_birth, "data-provide" => 'datepicker', class: 'form-control mb-3', required: true %>
              </div>
              <script type="text/javascript">
                $('#sandbox-container input').datepicker({
                    startDate: "-100Y",
                    endDate: "-18Y",
                    language: "es",
                    orientation: "bottom left",
                    calendarWeeks: true,
                    autoclose: true
                });
              </script>
            </div>
          </div>

            <div class="col-4 row"> 
             <%= f.label :image ,"URL de la imagen",class: 'text-white mb-1'%>  
              <%= f.url_field :image, class: 'form-control mb-3', placeholder: "Ingrese el link de su foto ", required: true %></div>
            <div class="col-4 row"> 
            <%= f.input :email,
                        required: true,
                        autofocus: true ,
                        input_html: { autocomplete: "Correo electronico" }%></div>
            <div class="col-4 row"> 
            <%= f.input :password,
                        required: true,
                        hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                        input_html: { autocomplete: "Nueva contraseña" } %></div>
            <div class="col-4 row"> 
            <%= f.input :password_confirmation,
                        required: true,
                        input_html: { autocomplete: "Confirme su contraseña" } %></div>
          </div>
      
      <h4>Datos de su tarjeta </h4> 
          <div class="form-group row">
             
            <div class="col-3 ">
                <div><%= f.label :card_Marca, "Marca"%> 
                <%= f.text_field :card_Marca,class: 'form-control mb-3',autofocus: true,required: true%> </div>
              </div>

             <div class="col-3"> 
                <div><%= f.label :cod, "Codigo de Verificación"%> 
                <%= f.text_field :cod,class: 'form-control mb-3', autofocus: true,required: true, hint: ("#{@minimum_cod_length} digitos minimo" if @minimum_cod_length)%> </div>
              </div>
              <div class="col-3"> 
                <div><%= f.label :card_Number, "Numero de la tarjeta"%> 
                <%= f.text_field :card_Number,class: 'form-control mb-3', autofocus: true,required: true, hint: ("#{@minimum_card_Number_length} digitos minimo" if @minimum_cod_length)%> </div>
            
              </div>
              <div class="col-3"> 
                <div><%= f.label :date_venc, "Fecha de vencimiento"%></div>
                <div id="sandbox-container2">
                <%= f.text_field :date_venc, "data-provide" => 'datepicker', class: 'form-control mb-3', required: true %>
                </div>
                <script type="text/javascript">
                  $('#sandbox-container2 input').datepicker({
                      startDate: "today",
                      language: "es",
                      orientation: "bottom left",
                      calendarWeeks: true,
                      autoclose: true
                  });
                </script>
               </div>
            </div>
          </div>
          <br><br><br>
</div>

      <div class="form-actions">
        <%= f.button :submit, "Guardar" %>
      </div>
      <% end %>
        <div class="bg-dark"><br /></div>

<%= render "users/shared/links" %>
</div>
</div>