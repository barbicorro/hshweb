<div class="container-fluid bg-dark pb-4">
    <div class="text-center"> 
          <h2 class="text-white mb-3">Registro</h2>
          <div class="alert text-white mb-3 alert-expand-lg bg-dark"><%= notice%> </div>
    </div>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %> 



    <div class="field text-white">
      <h4>Datos personales </h4> 
          <div class="form-group row">
            <div class="col-2 ">
                <div><%= f.label :name, "Nombre"%> 
                <%= f.text_field :name, autofocus: true,required: true%> </div>
              </div>
             <div class="col-2"> 
                <div><%= f.label :lastname, "Apellido"%> 
                <%= f.text_field :lastname, autofocus: true,required: true%> </div>
              </div>
            <div class="col-3"> 
            <h5><%= f.label :date_of_birth, "Fecha de nacimiento"%></h5>
            <%=f.date_select :date_of_birth, required:true %>
            </div>
            <div class="col-4"> 
             <h5><%= f.label :image ,"URL de la imagen",class: 'text-white mb-1'%></h5>  
              <%= f.url_field :image, class: 'form-control mb-3', placeholder: "Ingrese el link a la imagen de la residencia",
              required: true %></div>
            <div class="col-3 "> 
            <%= f.input :email,
                        required: true,
                        autofocus: true ,
                        input_html: { autocomplete: "Correo electronico" }%></div>
            <div class="col-4"> 
            <%= f.input :password,
                        required: true,
                        hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                        input_html: { autocomplete: "Nueva contraseña" } %></div>
            <div class="col-4"> 
            <%= f.input :password_confirmation,
                        required: true,
                        input_html: { autocomplete: "Confirme su contraseña" } %></div>
          </div>
      
      <h4>Datos de Tarjeta </h4> 
          <div class="form-group row">
            <div class="col-2 ">
                <div><%= f.label :card_Marca, "Marca"%> 
                <%= f.text_field :card_Marca, autofocus: true,required: true%> </div>
              </div>
             <div class="col-2"> 
                <div><%= f.label :cod, "Codigo de Verificación"%> 
                <%= f.text_field :cod, autofocus: true,required: true, hint: ("#{@minimum_cod_length} digitos minimo" if @minimum_cod_length)%> </div>
              </div>
              <div class="col-2"> 
                <div><%= f.label :card_Number, "Numero de la tarjeta"%> 
                <%= f.text_field :card_Number, autofocus: true,required: true, hint: ("#{@minimum_card_Number_length} digitos minimo" if @minimum_cod_length)%> </div>
              </div>







      <div class="form-actions">
        <%= f.button :submit, "Guardar" %>
      </div>
      <% end %>

<%= render "users/shared/links" %>
</div>
</div>