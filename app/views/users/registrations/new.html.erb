<div class="container-fluid bg-dark pb-4">
 <div class="alert text-white mb-3 alert-expand-lg bg-dark"><%= devise_error_messages! %>  </div>

          <h2 class="text-white text-center mb-3">Registro</h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>


    <div class="field text-white offset-3 ">
      <h4>Datos personales </h4>
       <div class="bg-dark"><br /></div>
          <div class="form-group">
          <div class="row">
            <div class="col-4 ">
                <div><%= f.label :name, "Nombre"%>
                <%= f.text_field :name,class: 'form-control mb-3', required: true%> </div>
              </div>
             <div class="col-4">
                <div><%= f.label :lastname, "Apellido"%>
                <%= f.text_field :lastname, class: 'form-control mb-3',required: true%> </div>
              </div>
          </div>
          <div class="row">

            <div class="col-4">
              <div><%= f.label :date_of_birth, "Fecha de nacimiento"%></div>
              <div id="sandbox-container">
                <%= f.text_field :date_of_birth, "data-provide" => 'datepicker', class: 'form-control mb-3', required: true %>
              </div>
              <script type="text/javascript">
                $('#sandbox-container input').datepicker({
                    startDate: "-100Y",
                    endDate: "-18Y",
                    language: "es",
                    orientation: "bottom left",
                    calendarWeeks: true,
                    autoclose: true
                });
              </script>
            </div>
          </div>
            <div class="row">
            <div class="col-8">
             <%= f.label :image ,"URL de la imagen",class: 'text-white mb-1'%>
              <%= f.url_field :image, class: 'form-control mb-3', placeholder: "Ingrese el link de su foto ", required: true %></div>
              </div>

            <div class="row">
            <div class="col-4">
            <%= f.input :email,
                        required: true,
                        autofocus: true ,
                        input_html: { autocomplete: "Correo electronico" }%></div>

            <div class="col-4">
            <%= f.input :password,
                        required: true,
                        hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                        input_html: { autocomplete: "Nueva contrase침a" } %></div>
              </div>

             <div class="row">
            <div class="col-8">
            <%= f.input :password_confirmation,
                        required: true,
                        input_html: { autocomplete: "Confirme su contrase침a" } %></div>
          </div>
          </div>
      <h4>Datos de su tarjeta </h4>
          <div class="form-group row">
          <br>
            <div class="col-4">
                <div><%= f.label :card_Marca, "Marca"%>
                <%= f.text_field :card_Marca,class: 'form-control mb-3',autofocus: true,required: true%> </div>
              </div>

             <div class="col-4">
                <div><%= f.label :cod, "Codigo de Verificaci칩n"%>
                <%= f.text_field :cod,class: 'form-control mb-3', autofocus: true,required: true, hint: ("#{@minimum_cod_length} digitos minimo" if @minimum_cod_length)%> </div>
              </div>
            </div>
            <div class="form-group row">

              <div class="col-4">
                <div><%= f.label :card_Number, "Numero de la tarjeta"%>
                <%= f.text_field :card_Number,class: 'form-control mb-3', autofocus: true,required: true, hint: ("#{@minimum_card_Number_length} digitos minimo" if @minimum_cod_length)%> </div>


            </div>
          </div>
            <h6> Fecha de vencimiento</h6>
              <div class="form-group row">

                <div class="col-4">
                    <div class="form-group" >

                     <%= f.select :date_venc_month, options_for_select(['Enero','Febrero','Marzo','Abril',
                       'Mayo','Junio','Julio','Agosto','Septiembre','Octubre','Noviembre','Diciembre']),
                     {include_blank: 'Mes '}, {class: 'form-control', required: true}%>
                     </div>

                    </div>
                    <div class="col-4">
                      <div class="form-group" >
                       <%= f.select :date_venc_year, options_for_select(['2019','2020','2021','2022',
                         '2023','2024','2025','2026','2028']),
                       {include_blank: 'A침o '}, {class: 'form-control', required: true}%>
                       </div>
                        </div>
            </div>

      <div class="form-actions">
        <%= f.button :submit, "Guardar" %>
      </div>
      <% end %>
        <div class="bg-dark"><br /></div>
        <%= render "users/shared/links" %>

</div>
</div>
</div>
