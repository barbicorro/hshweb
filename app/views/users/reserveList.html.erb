<% if current_user.id == @usuario.id %>
<div class="container-fluid bg-dark pb-4">
  <div class="text-center">
    <h2 class="text-white mb-3">Reservas actuales</h2>
    <div class="alert text-white mb-3 alert-expand-lg bg-dark"><%= notice%></div>
  </div>
  <div class="row">
    <table style="table", class="table table-dark">
      <thead>
        <tr>
          <th width "80%">#</th>
          <th width "80%"> Residencia</th>
          <th width "80%"> Semana</th>
          <th width "80%"> Acciones </th>
          <th colspan="4"> </th>
        </tr>
      </thead>
      <tbody>
      <% if (current_user.user_type_id == 2)  || (current_user.user_type_id == 3)%>
        <% if (@week1 != nil) %>
            <tr>
            <th scope="row">1</th>
              <% r1 = Residence.find(@week1.residence_id) %>
              <td><%= r1.title%></td>
              <td><%= @week1.period.strftime('%d/%m/%Y') %></td>
              <td><%= link_to "Ver residencia", residence_path(r1.id), class: 'btn btn-info btn-primary'%></td>
            </tr>
        <% else %>
          <tr>
            <th scope="row">1</th>
            <td> -   -   - </td>
            <td> -   -   - </td>
            <td> Credito disponible</td>
          </tr>
        <% end %>
        <% if (@week2 != nil) %>
          <tr>
          <th scope="row">2</th>
            <% r2 = Residence.find(@week2.residence_id) %>
            <td><%= r2.title%></td>
            <td><%= @week2.period.strftime('%d/%m/%Y') %></td>
            <td><%= link_to "Ver residencia", residence_path(r2.id), class: 'btn btn-info btn-primary'%></td>
          </tr>
        <% else %>
          <tr>
            <th scope="row">2</th>
            <td> -   -   - </td>
            <td> -   -   - </td>
            <td> Credito disponible</td>
          </tr>
        <% end %>
       <% end %>

      </tbody>
    </table>
  </div>

  <br><br><br>

  <button class="btn btn-block btn-light col-4 offset-4 mt-3"> <%= link_to "Volver", root_path %>
</button>

</div>
<%end%>
