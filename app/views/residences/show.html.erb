<div class="container-fluid bg-dark pb-4">
	<div class="text-center"> 
			<h2 class="text-white mb-3"><%=@residence.title%></h2>
	</div>
	<div class="row">

		<img src="https://avatars.mds.yandex.net/get-pdb/51720/e4c24fc8-b4f2-49fd-8896-523ff050527d/orig" class="style_image col-10 offset-1" height="400px">

		<div class="card text-white bg-dark col-4 mt-3" >
		  <div class="card-header text-center bg-primary"><h5>Dirección</h5></div>
		  <div class="card-body">
		    	<ul class="card-text text-justify">
		    		<li><%=@residence.address%></li>
		    		<li><%=@residence.country%></li>
		    		<li><%=@residence.province%></li>
		    		<li><%=@residence.locality%></li>
		    	</ul>
		  </div>
		</div>

		<div class="card text-white bg-dark col-8 mt-3" >
		  <div class="card-header text-center bg-primary"><h5>Descripción</h5></div>
		  <div class="card-body">
		    <p class="card-text text-justify">
		    	<%=@residence.description%>
		    </p>
		  </div>
		</div>

		<button class="btn btn-block btn-white col-4 offset-4 mt-3"><%= link_to "Volver", residences_path%></button>
	</div>	
</div> 