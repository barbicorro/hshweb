<div class="container-fluid bg-dark pb-4">
  <div class="text-center"> 
    <h2 class="text-white mb-3"> Residencias disponibles </h2>
    <div class="alert text-white mb-3 alert-expand-lg bg-dark"><%= notice%></div>
  </div>
  <div class="row">
    <table  class="table table-dark">
      <thead>
        <tr>
          <th> Residencia </th>
          <th> Semana </th>
          <th> Acciones </th>
        </tr>
      </thead>
      <tbody>
          <% for week in @weeks %>
            <tr>
              <td><%= Residence.find(week.residence_id).title %></td>
              <td><%= week.period.strftime('%d/%m/%Y') %></td>
              <% if (user_signed_in?)  %>
                  <% if (week.status_id == 1)  %>
                    <td><%= link_to "Inscribirse a subasta", new_inscription_path(week), class: 'btn btn-primary'%> </td>
                 <% elsif (week.status_id == 3) %>
                     <td> Reservada </td>
                 <%end%>
                <%end%>
            </tr>
          <% end %>
      </tbody>
    </table>
  </div>
  <button class="btn btn-lg btn-block btn-white col-4 offset-4 mt-3"><%= link_to "Volver", :back %></button>
</div>