<div class="container-fluid bg-dark pb-4">
	<br><br><br><br><br><br><br><br>
	<div class="container mb-5">
	<% if (@week.status_id != 2)%>
		<h3 class="text-white mb-3">La semana <%= @week.period%> será puesta en subasta por 3 días a partir de hoy</h3> 
		<%= form_for @week do |f|%>
		<div class "form-group">
			<%= f.hidden_field :status_id, value: "2" %>
			<%= f.submit "Aceptar", class: 'btn btn-primary mt-3' %>
		</div>
		<%end%>
		<%else%>
			<h3 class="text-white mb-3">La subasta de la semana <%= @week.period%> finalizará y será adjudicada a un usuario</h3> 
			<%= form_for @week do |f|%>
			<div class "form-group">
				<% #borrar la subasta y ejecutar el reservar residencia %>
				<%= f.submit "Aceptar", class: 'btn btn-primary mt-3' %>
			</div>
			<%end%>
		<%end%>
	</div>
	<br><br><br><br><br><br><br><br><br><br><br><br>
</div>